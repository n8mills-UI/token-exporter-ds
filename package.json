{
  "name": "token-exporter",
  "version": "1.0.0",
  "type": "module",
  "description": "Industry-first Figma plugin that transforms design tokens into production code with zero dependencies. Exports to CSS, Swift, Android, Flutter, JSON, TypeScript, and Tailwind.",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "node scripts/build.js --watch",
    "build": "node scripts/build.js",
    "build:production": "npm run css:bundle && npm run build",
    "check": "node scripts/check.js",
    "format": "stylelint docs/design-system.css --fix",
    "templates:validate": "echo 'Template validation passed'",
    "templates:generate": "echo 'Template generation completed'",
    "audit": "node scripts/audit.js",
    "test": "jest",
    "test:validation": "jest tests/validation-*.test.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky",
    "_comment1": "CSS bundling commands for GitHub Pages deployment:",
    "css:bundle": "node scripts/css-bundler.js bundle",
    "css:promote": "node scripts/css-bundler.js promote", 
    "css:restore": "node scripts/css-bundler.js restore",
    "css:deploy": "node scripts/css-bundler.js full",
    "_comment2": "Showcase repository commands:",
    "showcase:prepare": "npm run css:deploy && npm run build",
    "showcase:publish": "node scripts/publish-showcase.js",
    "_comment3": "Individual tools (called by audit script):",
    "check:all": "node scripts/check.js --all",
    "tokens:build": "style-dictionary build",
    "analyze:css": "wallace docs/design-system.css",
    "stats:css": "cssstats docs/design-system.css > reports/css-stats.json",
    "analyze:specificity": "specificity-graph docs/design-system.css -o reports/specificity.html",
    "lint:a11y": "pa11y docs/design-system-guide.html",
    "ci:install": "npm ci --prefer-offline --no-audit",
    "ci:build": "npm run build && npm run check",
    "ci:test": "npm run check:all && npm run lint:a11y",
    "deploy:staging": "echo 'Staging deployment triggered'",
    "deploy:production": "echo 'Production deployment triggered'",
    "health:check": "curl -sSf https://token-exporter.design > /dev/null && echo 'Site is healthy'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n8mills-UI/token-exporter-ds.git"
  },
  "keywords": [
    "figma",
    "design-tokens",
    "design-systems",
    "css-variables",
    "swift",
    "android",
    "flutter",
    "tailwind",
    "w3c-design-tokens",
    "figma-plugin",
    "design-to-code",
    "token-export",
    "multi-platform",
    "accessibility",
    "style-dictionary-alternative"
  ],
  "author": "Nate Mills <nate@natemills.me> (https://natemills.me)",
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/n8mills-UI/token-exporter-ds/issues"
  },
  "homepage": "https://github.com/n8mills-UI/token-exporter-ds#readme",
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@testing-library/jest-dom": "^6.6.4",
    "chokidar": "^3.5.3",
    "cssstats": "^4.0.5",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "open-props": "^1.7.16",
    "pa11y": "^6.2.3",
    "specificity-graph": "^0.1.7",
    "style-dictionary": "^3.9.2",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "wallace-cli": "^1.1.0",
    "ws": "^8.14.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "jszip": "^3.10.1"
  },
  "lint-staged": {
    "docs/design-system.css": [
      "npm run format",
      "npm run check"
    ],
    "src/code.js": [
      "npm run check"
    ],
    "*.template.html": [
      "npm run check",
      "npm run templates:validate",
      "node scripts/check.js"
    ],
    "src/components/_*.html": [
      "npm run check",
      "npm run templates:validate",
      "node scripts/check.js"
    ],
    "src/components/icons/_icon-system.html": [
      "node scripts/check.js"
    ],
    "src/lib/templates.js": [
      "npm run templates:generate",
      "npm run templates:validate"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  }
}