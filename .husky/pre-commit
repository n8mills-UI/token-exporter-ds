#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for incremental checks
npx lint-staged

# Run component override detection
echo "üîç Checking for CSS component overrides..."
npm run check:overrides

if [ $? -ne 0 ]; then
  echo "‚ùå Component override violations detected!"
  echo "Please remove context-specific CSS overrides and use component variants instead."
  echo "See CLAUDE.md for more information on the Zero Tolerance Component Override Policy."
  exit 1
fi

# Quick organization check for staged files
echo "üßπ Checking file organization..."
STAGED_FILES=$(git diff --cached --name-only --diff-filter=A)
if [ -n "$STAGED_FILES" ]; then
  MISPLACED=$(echo "$STAGED_FILES" | grep -iE '^(analysis|diagnostic|report|audit|research).*\.md$|^.*(mockup|test|demo|temp).*\.html$' || true)
  if [ -n "$MISPLACED" ]; then
    echo "‚ùå Files need organizing:"
    echo "$MISPLACED" | sed 's/^/  /'
    echo "  ‚Üí Analysis docs should be in .dev/analysis/"
    echo "  ‚Üí Temp HTML files should be in .dev/temp/"
    echo "Run: mkdir -p .dev/{analysis,temp} && git add ."
    exit 1
  fi
fi

echo "‚úÖ All pre-commit checks passed!"
